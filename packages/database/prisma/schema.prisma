generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(uuid())
  username   String 
  email      String @unique
  password   String
}

model Website{
 
id      String @id @default(uuid())
Url     String
Time    DateTime
Ticks    WebsiteTick[]
    
}

model Region{
 id       String @id @default(uuid())
 name     String
 Ticks     WebsiteTick[]
}

model WebsiteTick{
  id                String @id  @default(uuid())
  response_time_ms  Int
  status            WebsiteStatus
  region            Region    @relation(fields: [region_id] ,references: [id])
  website           Website   @relation(fields: [website_id] ,references: [id])
  website_id        String
  region_id         String
}

enum WebsiteStatus {
  up
  down
  unknown
}